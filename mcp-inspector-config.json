{
  "//": "made by namar0x0309 with ❤️ at GoAIX",
  "mcpServers": {
    "wekan-username": {
      "command": "node",
      "args": ["dist/server.js"],
      "env": {
        "WEKAN_BASE_URL": "https://wekan.uan.com.br",
        "WEKAN_USERNAME": "username",
        "WEKAN_PASSWORD": "password!"
      },
      "transport": "stdio"
    },
    "wekan": {
      "command": "node",
      "args": ["dist/server.js"],
      "env": {
        "WEKAN_BASE_URL": "https://wekan.uan.com.br",
        "WEKAN_API_TOKEN": "your-token-from-get-wekan-token-script",
        "WEKAN_USER_ID": "your-user-id-from-get-wekan-token-script"
      },
      "transport": "stdio"
    }
  }
}
